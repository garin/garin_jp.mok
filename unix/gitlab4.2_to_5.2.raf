  # cd /etc/apache2/conf.d
  # vi gitlab.conf

  <VirtualHost *:443>
      ServerName gitlab.example.com
    # ポートを3000から9292に変更
    ProxyPass / http://127.0.0.1:9292/
    ProxyPassReverse / http://127.0.0.1:9292/
    ProxyPreserveHost On
  ...

  // Apache を再起動
  # /etc/init.d/apache2 restart

